drop database if exists possystem;
create database possystem;
use possystem;

create table employee(
    emp_email varchar(50) primary key ,
    emp_pword varchar(50),
    position varchar(50),
    f_name varchar(50),
    l_name varchar(50),
    nic varchar(50),
    address varchar(50),
    gender varchar(50),
    contact_num varchar (50),
    date date
);

create table customer(
    mobile varchar(30) primary key ,
    f_name varchar(40),
    l_name varchar(40),
    email varchar(40),
    address varchar(50),
    date date
);

create table supplier(
                         mobile varchar(50) not null PRIMARY KEY ,
                         fname varchar(50) ,
                         lname varchar(50),
                         email varchar(50),
                         company varchar(50),
                         constraint foreign key(company) references company(company_name)on delete cascade on update cascade

);

create table company(
    company_name varchar(50) primary key ,
    hotline varchar(50),
    location varchar(50),
    date date
);


create table invoice(
                        invoiceNum varchar(50)primary key not null ,
                        invDate date,
                        invDueDate date,
                        invTotal decimal(10,2),
                        invPaid decimal(10,2),
                        invBalance decimal(10,2),
                        supName varchar(50)
);

create table product(
                        barcode varchar(50) primary key not null,
                        productName varchar(50),
                        category varchar(50),
                        costPrice decimal(10,2),
                        sellingPrice decimal(10,2),
                        inQty varchar(50),
                        freeQty varchar(50),
                        totQty varchar(50),
                        minStockAlert varchar(50),
                        stockBin varchar(50),
                        invNum varchar(50),
                        supplierName VARCHAR(50), -- Add supplier name column to product table
                        expDate date,
                        mfdDate date,
                        totalPayment varchar(50),
                        paidAmount varchar(50),
                        dueBalance varchar(50),
                        invDate date,
                        dueDate date,
                        constraint foreign key(invNum) references invoice(invoiceNum)on delete cascade on update cascade

);

-- Add foreign key constraint between product and supplier table
ALTER TABLE product
    ADD CONSTRAINT fk_supplier_name FOREIGN KEY (supplierName) REFERENCES supplier(fname);


-- Add foreign key constraint between invoice and supplier table
ALTER TABLE invoice
    ADD CONSTRAINT fk_invoice_supplier FOREIGN KEY (supName) REFERENCES supplier(fname);

# add foreign key constraint between invoice and product
# add invDate
CREATE INDEX idx_invDate ON invoice(invDate);
ALTER TABLE product
    ADD CONSTRAINT fk_invoice_invDate FOREIGN KEY (invDate) REFERENCES invoice(invDate);

# add invoice to dueDate
CREATE INDEX idx_invDueDate ON invoice(invDueDate);
ALTER TABLE product
    ADD CONSTRAINT fk_invoice_invDueDate FOREIGN KEY (dueDate) REFERENCES invoice(invDate);

# add paid amount
ALTER TABLE product MODIFY paidAmount DECIMAL(10,2);
ALTER TABLE product
    ADD CONSTRAINT fk_invoice_invPaid FOREIGN KEY (paidAmount) REFERENCES invoice(invPaid);

# add duebalance
ALTER TABLE product MODIFY dueBalance DECIMAL(10,2);
ALTER TABLE product
    ADD CONSTRAINT fk_invoice_invBalance FOREIGN KEY (dueBalance) REFERENCES invoice(invBalance);

# add totalPayment
CREATE INDEX idx_invTotal ON invoice(invTotal);
ALTER TABLE product
    ADD CONSTRAINT fk_invoice_invTotal FOREIGN KEY (totalPayment) REFERENCES invoice(invTotal);
